<html>
<head>
	<title>ToDo List</title>
</head>
<body>

	<ul>
	<% todolist.forEach(function(item) { %>
		<li> <a href='/todo/supprimer/<%= item._id%>'><%= item.todo %></a>
	<% }); %>
	</ul>
	<form action='/todo/ajouter/' method='post'>
